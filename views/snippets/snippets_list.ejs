        <a class="float" href="/new">+</a>
        <% for (let snippet of snippets) { %>
        <div class="card">
            <h3><i class="<%= snippet.language.logo %>"></i> <%= snippet.title %></h5>
            <pre class="<%= snippet.language.htmlClass %>"><code><%= snippet.code %></code></pre>
            <p><%= snippet.description %></p>
            <p style="text-align: end;"><%= snippet.author.name %></p>
            <p style="text-align: end;">Post√© le <%= snippet.creationDate.toLocaleString('fr-FR') %></p>
        </div>
        <% } %>
    </div>
